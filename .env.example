# Django environment variables
DJANGO_SECRET_KEY=unsafe-dev-key-change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# Database (local SQLite by default, use DATABASE_URL for PostgreSQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/healthcare_saas

# Stripe configuration (get keys from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Celery/Redis (adjust for Heroku Redis or other broker)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
# On Heroku, REDIS_URL is automatically set by the Redis add-on

# Email configuration (optional, for production)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=user@example.com
# EMAIL_HOST_PASSWORD=your_password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=webmaster@example.com
